{
  "name": "CSYGC Trivial Compute",
  "authors": "CSYGC software solutions",
  "description": "By CSYGC from JHU",
  "license": "MIT",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.mjs",
  "scripts": {
    "dev": "concurrently --kill-others \"vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env DEV_ENV=true electron .",
    "build": "vite build",
    "preview": "vite preview",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "extraResource": [
          "./dist/server.exe",
	        "../questions.json"

        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "csygc_trivial_compute"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ],
          "config": {}
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.1",
    "@electron-forge/maker-deb": "^7.6.1",
    "@electron-forge/maker-rpm": "^7.6.1",
    "@electron-forge/maker-squirrel": "^7.6.1",
    "@electron-forge/maker-zip": "^7.6.1",
    "@smui/button": "^8.0.0-beta.3",
    "@smui/chips": "^8.0.0-beta.3",
    "@smui/select": "^8.0.0-beta.3",
    "@smui/textfield": "^8.0.0-beta.3",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.0.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.0.1",
    "electron-reload": "2.0.0-alpha.1",
    "svelte": "^5.19.5",
    "svelte-window-system": "^0.1.0",
    "tailwindcss": "^4.0.0",
    "vite": "^6.0.11"
  },
  "dependencies": {
    "@smui/common": "^8.0.0-beta.3",
    "electron-log": "^5.4.2",
    "electron-squirrel-startup": "^1.0.1",
    "flowbite": "^3.1.2",
    "flowbite-svelte": "^1.11.0",
    "smui": "^1.0.5",
    "svelte-routing": "^2.13.0"
  }
}